<div class="row">
    <div class="col-12 col-md-10 pb-3">
        <h3>Choose a week to view standings</h2>
        <small><i class="fas fa-info-circle mr-1"></i>To view the table standings please fill in the weekly fixtures using the <a href="/calculator">calculator</a> page</small>
    </div>
    <div class="form-group col-12 col-md-2">
        <select class="form-control week-dropdown mb-3">
            {{#repeat count=38 start=1}}
            <option value="{{@index}}">week {{@index}}</option>
            {{/repeat}}
        </select>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-12">
        <div class="league-table-container">
        </div>
    </div>
</div>