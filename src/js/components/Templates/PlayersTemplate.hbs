    {{#if gkLeft.length}}
    <div class="col-12">
        <h3 class="mb-3">Goalkeepers</h2>
    </div>
    <div class="col-12 col-md-6">
        <table class="table table-striped table-sm player-table">
            <colgroup>
                <col class="id">
                <col class="team">
                <col class="name">
                <col class="price">
            </colgroup>
            <thead class="thead-dark">
                <th>ID</th>
                <th>Team</th>
                <th>Name</th>
                <th>Price</th>
            </thead>
            {{#each gkLeft}}
            <tr class="player-row {{availabilityType}}">
                <td>{{id}}</td>
                <td class="{{teamName}}">{{teamShort}}</td>
                <td class="player-name">
                    <!-- <img src="{{image}}" alt={{name}} onerror="this.src = 'https://platform-static-files.s3.amazonaws.com/premierleague/photos/players/40x40/Photo-Missing.png'"/> -->
                    {{name}}
                </td>
                <td>
                    {{price}} {{#if isUnavailable}}
                    <i class='fas fa-exclamation-triangle'></i>
                    <span class='player-status'>{{availabilityNews}}</span>
                    {{/if}}
                </td>
            </tr>
            {{/each}}
