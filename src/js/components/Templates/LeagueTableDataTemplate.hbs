<table class="table table-striped">
    <tr>
        <th class="th-position">Position</th>
        <th class="th-prevweek">Prv Week</th>
        <th class="th-team">Team</th>
        <th class="th-redcards">Red Cards</th>
        <th class="th-goals">Goals Scored</th>
        <th class="th-weekscore">Week Points</th>
        <th class="th-total">Total Points</th>
    </tr>
    {{#each this}}
    <tr class="team-row" data-team-id="{{teamID}}" data-team-points="{{pointsTotal}}" data-team-goals="{{goalsTotal}}" data-table-position="{{tablePosition}}">
        <td class="td-position {{positionChange}}">{{tablePosition}} <i class="fas {{positionChange}}"></i></td>
        <td class="td-prevweek">{{prevWeekPosition}}</td>
        <td class="td-team">{{teamName}}</td>
        <td class="td-redcards">{{redCardTotal}}</td>
        <td class="td-goals">{{goalsTotal}}</td>
        <td class="td-weekscore">{{weekPoints}}{{#if weekWinner}}<i class="fas fa-star"></i>{{/if}}</td>
        <td class="td-total">{{pointsTotal}}</td>
    </tr>
    {{/each}}
</table>