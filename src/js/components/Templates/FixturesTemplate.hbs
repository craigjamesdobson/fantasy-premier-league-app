<div class="row">
    {{#repeat count=10 start=1}}
    <div id="fixture-{{@index}}" class="fixtures col-xs-12 col-md-6">
        <h3>Fixture {{@index}}</h3><span class="clear-fixture"><i class="fa fa-undo" aria-hidden="true"></i></span>
        <table>
            <tbody>
                <tr>
                    <td class="home-team">
                        <select class="teams-dropdown">
                            <option selected disabled style="display:none;" value="0">Teams</option>
                            {{#each teams}}
                            <option class="team-option" data-id="{{teamID}}" value="{{teamID}}">{{teamName}}</option>
                            {{/each}}
                        </select>
                        <select class="score">
                            {{#repeat 10 start=0}}
                            <option value="{{@index}}">{{@index}}</option>
                            {{/repeat}}
                        </select>
                    </td>
                    <td>
                        <div class="versus align-center">vs</div>
                    </td>
                    <td class="away-team">
                        <select class="teams-dropdown">
                            <option selected="" style="display:none;" value="0">Teams</option>
                            {{#each teams}}
                            <option class="team-option" data-id="{{teamID}}" value="{{teamID}}">{{teamName}}</option>
                            {{/each}}
                        </select>
                        <select class="score">
                            {{#repeat 10 start=0}}
                            <option value="{{@index}}">{{@index}}</option>
                            {{/repeat}}
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="player-table">
                        <div class="home-team-players">
                        </div>
                    </td>
                    <td></td>
                    <td class="player-table">
                        <div class="away-team-players">
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    {{/repeat}}
</div>